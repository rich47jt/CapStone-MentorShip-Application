@model IEnumerable<Project_CapStone_Mentorship_Service.Models.Sign_UpForm>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/StudentLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Studnet_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Need_for_Academic_Help)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mentor_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsTutor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Studnet_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Need_for_Academic_Help)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mentor_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsTutor)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FormId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.FormId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.FormId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
